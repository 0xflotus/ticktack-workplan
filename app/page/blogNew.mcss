Page -blogNew {
  div.SideNav {}

  div.content {
    display: flex

    div.container {
      flex-basis: 100%
      $maxWidth
      margin: 0 auto


      div.field {
        margin-bottom: .5rem
        $maxWidth

        display: flex
        align-items: center

        div.label {
          flex-basis: 4.5rem
          padding-left: 1rem
          margin-right: 1rem
        }

        input {
          flex-grow: 1
          $fontBasic
          padding: .6rem 1rem

          border-radius: 4rem
          $borderSubtle
          outline: none
        }

        -title {
          margin: 0

          input {
            font-size: 2em
            font-weight: bold

            padding-top: 2rem
            border: none
            border-radius: 0

            -empty {
              font-weight: normal
              font-style: italic
            }
          }
        }

        -attachment {
          margin-top: .5rem
          margin-left: 0

          /* copied from message.html.compose */
          input[type="file"] {
            border: none
            flex-grow: 0

            color: transparent

            ::-webkit-file-upload-button {
              visibility: hidden
            }

            ::before {
              $attachButton
              /* padding-top: .3rem */

              /* content: 'ðŸ“Ž' */
              content: url('file.png')
              font-size: 1rem

              outline: none
              white-space: nowrap
              -webkit-user-select: none
            }

            :active, :focus {
              outline: none
              box-shadow: none
            }
          }
        }

        -channel {}
      }

      div.editor{
        background-color: #fff
        padding: 1rem
        min-height: 30rem
        outline: none
      }

      div.Compose {
        textarea {
          margin-top: 2rem
          min-height: 30rem
        }
      }
    }
  }
}
