Page {
  height: calc(100% - 3.5rem)  /*needed for scrolling*/

  $backgroundPrimary
  margin-top: 3.5rem

  display: flex

  div.SideNav {
    min-height: calc(100% - 3rem)
    overflow-y: auto
    overflow-x: hidden
  }

  div.content {
    min-height: calc(100% - 3rem)
    overflow-y: auto
      
    flex-grow: 1

    padding: 1rem
    margin: 0 auto 

    div, section {
      :last-child {
        padding-bottom: 6rem !important
      }
    }
  }
}

