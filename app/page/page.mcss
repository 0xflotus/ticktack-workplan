Page {
  height: calc(100% - 3rem)  /*needed for scrolling*/

  $backgroundPrimary
  margin-top: 3rem

  display: flex

  div.context {
    min-height: calc(100% - 3rem)
    overflow-y: auto

    padding: 1rem
  }

  div.content {
    min-height: calc(100% - 3rem)
    overflow-y: auto
      
    $maxWidth
    flex-grow: 1

    padding: 1rem
    margin: 0 auto 
}

