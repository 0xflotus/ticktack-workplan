Page -userShow {
  div.content {
    header {
      display: flex
      align-items: baseline

      h1 {
        margin-right: 1rem
      }
      div.Link {
        color: #666
        :hover {
          $colorPrimaryFG
        }
      }
    }

    img.Avatar {
      width: 30rem
      height: 30rem
    }

    div.friendship {
      display: flex
      align-items: center

      margin-bottom: 1rem

      div.state { flex-basis: 12rem }
      div.Button {}
    }

    div.threads {}
  }
}

