Scroller {
  overflow: auto
  width: 100%
  /* height: 100% */
  min-height: 0px

  section.top {
    /* position: sticky */
    left: 0
    right: 0
    top: 0
    z-index: 99

    background-color: #fff
  }

  section.content {
    background-color: #fff
    $maxWidth
    margin: .8rem auto
    padding: .5rem 2rem

    display: flex
    flex-wrap: wrap

  }

  section.bottom {
  }
}

