Header {
  nav {
    $colorPrimary
    $navFA
    padding: 1rem 0

    width: 100%
    height: 1.5rem
    position: fixed
    top: 0
    z-index: 99

    display: flex
    align-items: center
    justify-content: center

    img {
      cursor: pointer
      text-decoration: none

      margin: 0 2rem
    }

    (a) {
      color: #222
      margin-right: 1rem

      :hover {
        text-decoration: underline
      }
    }
}

