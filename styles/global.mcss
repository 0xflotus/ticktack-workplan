body {
  $fontBasic 
  $backgroundPrimaryText

  margin: 0

  // different to Page
  div.page {

    overflow: hidden
    position: absolute
    top: 0
    bottom: 0
    right: 0
    left: 0
  }

  (a) {
    color: #2f63ad
    text-decoration: none

    :hover {
      text-decoration: underline
    }
  }
}

img {
  max-width: 100%
}

